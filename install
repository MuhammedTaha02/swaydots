#!/bin/bash
PATH="$HOME/.local/bin:$PATH"
export PATH

FGRED="\e[0;31m"
FGREN="\e[0;32m"
FGYEL="\e[0;33m"
FGRES="\e[0;39m"

_logfile=$PWD/installer-$(date +%d%m%Y_%H%M%S).log
_sep="========================="
_locale=$(swaymsg -t get_inputs | jq 'map(select(has("xkb_active_layout_name")))[0].xkb_active_layout_name')
if [[ $_locale == "Turkish" ]]; then
	_layout=tr
elif [[ $_locale == "Deutsch" ]]; then
	_layout=de
else
	_layout=us
fi

checkprogram()
{
  command -v $1 >/dev/null 2>&1;
  if [[ $? -eq 1 ]]; then
    echo -e "${FGRED}Please install $1 before proceeding. ${FGRES}"; 
    exit 1;
  fi
}

case $1 in
	-i)
		echo -e "${FGREN} Checking program(s)...${FGRES}"
		checkprogram sway
		checkprogram lxappearance
		checkprogram waybar
		checkprogram mako
		checkprogram grim
		checkprogram brightnessctl
		checkprogram wofi
		checkprogram git
		checkprogram kitty
		checkprogram feh
		checkprogram wget
		checkprogram pip
		echo -e "${FGREN} All dependencies are present on the computer :) ${FGRES}"
		

		echo -e "${FGREN} Backing up previous dotfile files, if any...${FGRES}"
		echo -e "$_sep" 1>>$_logfile
		echo -e ">> BACKUP" 1>>$_logfile
		mkdir $HOME/.backupdots 1>>$_logfile
		for i in $(ls $PWD/.config); do
			[[ -e $HOME/.config/$i ]] && mv $HOME/.config/$i $HOME/.backupdots
		done
		echo -e "$_sep" 1>>$_logfile
		

		echo -e "${FGREN} Installing swaydots...${FGRES}"
		echo -e "$_sep" 1>>$_logfile
		echo -e ">> COPY" 1>>$_logfile
		cp -r $PWD/.config/* $HOME/.config/ 1>>$_logfile
		cp -r $PWD/.fonts $HOME/ 1>>$_logfile
		echo -e "$_sep" 1>>$_logfile
		

		echo -e "${FGREN} Downloading extra dependencies...${FGRES}"
		echo -e "$_sep" 1>>$_logfile
		echo -e ">> PIP" 1>>$_logfile
		pip install pywal 1>>$_logfile
		pip install pillow 1>>$_logfile
		pip install wpgtk 1>>$_logfile
		fc-cache
		echo -e "$_sep" 1>>$_logfile

		
		echo -e "${FGREN} Installing FlatColor theme, linking dotfiles in wpgtk and applying theme...${FGRES}"
		echo -e "$_sep" 1>>$_logfile
		echo -e ">> WPG" 1>>$_logfile
		wpg-install.sh -gi &>>$_logfile
		echo -e ">> LN" 1>>$_logfile
		ln -sf $HOME/.config/sway/config.d/colors $HOME/.config/wpg/templates/sway 1>>$_logfile
		ln -sf $HOME/.config/waybar/style.css $HOME/.config/wpg/templates/waybar 1>>$_logfile
		ln -sf $HOME/.config/mako/config $HOME/.config/wpg/templates/mako 1>>$_logfile
		ln -sf $HOME/.config/wpg/wallpapers/* $HOME/.config/wpg/.current 1>>$_logfile
		sch=$(ls $HOME/.config/wpg/schemes)
		usrsch=$(ls $HOME/.config/wpg/schemes | sed "s/arch/$USER/g")
		echo -e ">> MV" 1>>$_logfile
		mv $HOME/.config/wpg/schemes/$sch $HOME/.config/wpg/schemes/$usrsch 1>>$_logfile
		echo -e ">> CP" 1>>$_logfile
		cp $PWD/gtk/gtk2 $HOME/.local/share/themes/FlatColor/gtk-2.0/gtkrc 1>>$_logfile
		cp $PWD/gtk/gtk3.0 $HOME/.local/share/themes/FlatColor/gtk-3.0/gtk.css 1>>$_logfile
		cp $PWD/gtk/gtk3.20 $HOME/.local/share/themes/FlatColor/gtk-3.20/gtk.css 1>>$_logfile
		cp $PWD/gtk/gtkrc $HOME/.gtkrc-2.0 1>>$_logfile
		echo -e ">> GSETTINGS" 1>>$_logfile
		gsettings set org.gnome.desktop.interface gtk-theme 'FlatColor' 1>>$_logfile
		gsettings set org.gnome.desktop.interface icon-theme 'flattrcolor' 1>>$_logfile
		swaymsg reload
		echo -e "$_sep" 1>>$_logfile

		
		echo -e "${FGREN} Setting keyboard locale...${FGRES}"
		echo -e "${FGYEL} Your keyboard layout is $_locale, Setting locale $_layout"
		echo -e " If you want to set another keyboard layout,"
		echo -e " you can edit the file ~/.config/sway/config.d/inputs ${FGRES}"
		sed -i "s/tr/$_layout/1" $HOME/.config/sway/config.d/inputs



		echo -e "${FGREN} Installing blurlock (required password)...${FGRES}"
		echo -e "$_sep" 1>>$_logfile
	       	sudo cp blurlock /usr/local/bin/blurlock 1>>$_logfile
		sudo chmod +x /usr/local/bin/blurlock 1>>$_logfile
		echo -e "$_sep" 1>>$_logfile
	;;
	-r)
		echo -e "${FGYEL} Removing dotfiles and restoring old dotfiles...${FGRES}"
		for r in $(ls $HOME/.backupdots); do
			rm -rf $HOME/.config/$r 1>>$_logfile
			cp -r $HOME/.backupdots/$r $HOME/.config/ 1>>$_logfile
		done
	;;
esac
